<h1>Edit Verb</h1>
<h3>Modify Verb's Principle Parts</h3>
<div class="row">
  <div class="col-md-4 ">
    <%= form_for(@verb, html:  { role: "form" }) do |f| %>
    <%= render 'shared/error_messages' %>
    <div class="form-group">
      <%= f.label :first %>
      <%= f.text_field :first, placeholder: "First", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :second %>
      <%= f.text_field :second, placeholder: "Second", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :third %>
      <%= f.text_field :third, placeholder: "Third", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :fourth %>
      <%= f.text_field :fourth, placeholder: "Fourth", class: "form-control" %>
    </div>
    <%= f.submit "Edit Verb", class: "btn btn-default" %>
    <% end %>
  </div>
</div>
