<h1>Add Tense to <%= @verb.first.capitalize %>, <%= @verb.second.capitalize %></h1>

<div class="row">
  <div class="col-md-4 ">
    <%= form_for([@verb, @tense]) do |f| %>
    <%= render 'shared/error_messages' %>
    <%= f.hidden_field :verb_id, :value => @verb.id %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :abbrv %>
      <%= f.text_field :abbrv, placeholder: "Abbrv", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :voice %>
      <%= f.text_field :voice, placeholder: "Voice", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :mood %>
      <%= f.text_field :mood, placeholder: "Mood", class: "form-control" %>
    </div>
    <%= f.submit "Add Tense", class: "btn btn-default" %>
    <% end %>
  </div>
</div>

